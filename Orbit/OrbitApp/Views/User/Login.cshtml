@model OrbitEntity.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="~/Scripts/fontawesome.js"></script>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <script src="~/Scripts/formValidator.js"></script>
</head>
<body style="background-color:antiquewhite;">
    <section class="clearfix login-section">
        <div class="container">
            <div class="login-box" id="login-box" style="margin-top:170px;">
                <form class="form-horizontal" method="post" action="~/User/Login">
                    <div class="form-group row">
                        <div class="login-logo" style="margin-left:120px;;padding-bottom:25px;">
                            <a href="~/Home">
                                <img src="~/Resources/orbit.png" width="100px" />
                            </a>
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-user"></i></div>
                            </div>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-key"></i></i></div>
                            </div>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <input type="submit" value="Sign in" class="btn btn-outline-primary btn-block btn-md" name="Submit"/>
                    </div>
                    <div class="form-group row">
                        <div class="input-group input-group-md">
                            <div class="input-group-prepend">
                                <div class="btn btn-primary" style="border-right:1px solid #ffffff"><i class="fab fa-google"></i></div>
                            </div>
                            <input type="submit" class="form-control btn btn-outline-primary" value="Sign in with Google">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="btn-group col">
                            <a href="~/User/Registration" class="btn btn-link">Create An Account</a>
                            <a href="#" class="btn btn-link">Forgot Password?</a>
                        </div>
                    </div>                  
                </form>
            </div>
        </div>
    </section>

    <script>
        function loginResize() {
            var height = window.innerHeight;
            height = Math.max(10, (height - 450) / 2);
            document.getElementById("login-box").style.marginTop = "" + height + "px";
        }
        loginResize();
        window.onresize = function () {
            loginResize();
        };
    </script>
</body>
</html>
