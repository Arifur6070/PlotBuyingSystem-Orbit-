@model OrbitEntity.Person

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="~/Scripts/fontawesome.js"></script>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <script src="~/Scripts/formValidator.js"></script>
</head>
<body style="background-color:antiquewhite;">
    <section class="clearfix login-section">
        <div class="container">
            <div class="login-box" id="login-box" style="margin-top:100px;">
                <form class="form-horizontal" method="post" action="~/User/Registration" onsubmit="return validateForm()">
                    <div class="form-group row">
                        <div class="login-logo" style="margin-left:120px;;padding-bottom:25px;">
                            <a href="~/Home">
                                <img src="~/Resources/orbit.png" width="100px" />
                            </a>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="input-group">
                            <input type="text" class="form-control" id="name" name="name" value='@Session["Name"]' placeholder="Full Name">
                        </div>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        <div class="input-group">
                            <input type="email" class="form-control" id="email" name="email" value='@Session["Email"]' placeholder="Email">
                        </div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <div class="input-group">
                            <input type="text" class="form-control" id="phoneNum" name="phoneNum" value='@Session["PhoneNum"]' placeholder="Phone Number">
                        </div>
                        @Html.ValidationMessageFor(model => model.PhoneNum, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <div class="input-group">
                            <input type="text" class="form-control" id="address" name="address" value='@Session["Address"]' placeholder="Address">
                        </div>
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <input type="submit" value="Next" class="btn btn-outline-primary btn-block btn-md" name="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
</html>

